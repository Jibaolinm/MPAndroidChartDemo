<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="#EFEFEF"
    android:padding="20dp"
    android:layout_height="match_parent"
    tools:context="com.petterp.guosai.GuosaiTest.WeiZhang.WeiZhangActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:text="日历"
            android:id="@+id/weizhang_rili"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:background="@drawable/weizhang_text"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="25sp"
                android:textColor="#000"
                android:paddingLeft="5dp"
                android:gravity="center"
                android:paddingRight="20dp"
                android:text="2016-5-1"
                />
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#000"/>
            <View
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:id="@+id/date_from"
                android:layout_marginTop="5dp"
                android:layout_gravity="center"
                android:background="@drawable/weizhang_sanjiao"
                />
        </LinearLayout>
        <TextView
            android:layout_marginLeft="100dp"
            android:layout_gravity="center"
            android:layout_marginRight="100dp"
            android:textColor="#000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:text="至"/>
        <LinearLayout
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:background="@drawable/weizhang_text"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="25sp"
                android:gravity="center"
                android:textColor="#000"
                android:paddingLeft="5dp"
                android:paddingRight="20dp"
                android:text="2017-5-1"
                />
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#000"/>
            <View
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:id="@+id/date_to"
                android:layout_marginTop="5dp"
                android:layout_gravity="center"
                android:background="@drawable/weizhang_sanjiao"
                />
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:text="次数"/>
    <com.github.mikephil.charting.charts.LineChart
        android:layout_width="match_parent"
        android:layout_marginBottom="30sp"
        android:layout_height="match_parent"
        android:id="@+id/chart"/>
</LinearLayout>
